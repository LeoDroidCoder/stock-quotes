<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="Text">
        <item name="android:fontFamily">@font/sfns_display</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

    <style name="Text.Heading">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/font_size_larger</item>
    </style>

    <style name="TextAppearanceTitle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:listDivider</item>
    </style>

</resources>
